
<div class="col-md-3">
  <h2>User info</h2>
  <!-- ユーザーの詳細 -->
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tr>
      <th>name <%= user.name %></th>
    </tr>
    <tr>
      <th>introduction <%= user.introduction %></th>
    </tr>
  </table>

  <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: book  do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>