  <h2>User info</h2>
  <!-- ユーザーの詳細 -->
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tr>
      <th>name <%= user.name %></th>
    </tr>
    <tr>
      <th>introduction <%= user.introduction %></th>
    </tr>
  </table>

  <table class="table">

    <%= link_to edit_user_path(user) do%>
      <div class=" btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></div>
    <%end%>

  </table>
